    "primary": "#1a1a1a",
    "secondary": "#2f2f2f",
    "accent": "#b45309",
    "background": "#121212",
    "text": "#ffffff"
  },
  "layout": {
    "type": "grid",
    "structure": [
      "hero",
      "main",
      "sidebar",
      "footer"
    ]
  },
  "components": {
    "shadcn": [
      "Button",
      "Card",
      "Input",
      "Select",
      "Table",
      "Dialog",
      "Form",
      "Badge",
      "Avatar",
      "Tabs",
      "Progress",
      "Separator",
      "Skeleton",
      "Command",
      "Collapsible"
    ],
    "radix": [
      "Dialog",
      "DropdownMenu",
      "Popover",
      "Tabs",
      "Switch",
      "Slider",
      "ScrollArea",
      "RadioGroup"
    ]
  },
  "features": [
