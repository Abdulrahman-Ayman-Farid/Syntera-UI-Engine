{
  "id": "health-fitness-tracker",
  "title": "Health & Fitness Tracker Dashboard",
  "description": "A wellness-focused dashboard for tracking workouts, nutrition, sleep, and health metrics with beautiful gradient designs and progress tracking.",
  "category": "Health & Fitness",
  "color_palette": {
    "primary": "#10b981",
    "secondary": "#0d9488",
    "accent": "#f59e0b",
    "background": "#f0fdfa",
    "text": "#1f2937"
  },
  "layout": {
    "type": "dashboard",
    "structure": [
      "header",
      "welcome-stats",
      "health-metrics",
      "workouts-nutrition",
      "achievements"
    ]
  },
  "components": {
    "shadcn": [
      "Button",
      "Card",
      "Input",
      "Select",
      "Progress",
      "Skeleton",
      "Badge",
      "Avatar",
      "Tabs"
    ]
  },
  "features": [
    "workout-tracking",
    "nutrition-log",
    "health-metrics",
    "progress-visualization",
    "achievements",
    "daily-goals"
  ],
  "responsive": {
    "breakpoints": {
      "mobile": "< 640px",
      "tablet": "640px - 1024px",
      "desktop": "> 1024px"
    }
  },
  "accessibility": {
    "wcag_level": "AA",
    "contrast_modes": ["light", "dark", "high-contrast"],
    "reduced_motion": true,
    "focus_variants": ["ring-2", "ring-emerald-500", "ring-offset-2"],
    "keyboard_support": ["tab-navigation", "arrow-keys", "enter-key", "escape-key"],
    "screen_reader": {
      "live_regions": ["polite", "assertive"],
      "announcements": ["workout-complete", "goal-achieved", "metric-updated"]
    }
  },
  "semantic_roles": {
    "metric-card": "health-metrics",
    "workout-item": "workouts-nutrition",
    "progress-chart": "health-metrics",
    "stat-card": "welcome-stats",
    "achievement-badge": "achievements",
    "goal-tracker": "daily-goals"
  },
  "libraries_to_be_imported": {
    "charts": ["recharts"],
    "animations": ["framer-motion"],
    "icons": ["lucide-react"],
    "forms": ["react-hook-form", "@hookform/resolvers", "zod"],
    "utils": ["clsx", "tailwind-merge", "date-fns"]
  },
  "color_palette_extended": {
    "primary": {
      "50": "#ecfdf5",
      "100": "#d1fae5",
      "200": "#a7f3d0",
      "300": "#6ee7b7",
      "400": "#34d399",
      "500": "#10b981",
      "600": "#059669",
      "700": "#047857",
      "800": "#065f46",
      "900": "#064e3b",
      "950": "#022c22"
    },
    "secondary": {
      "50": "#f0fdfa",
      "100": "#ccfbf1",
      "200": "#99f6e4",
      "300": "#5eead4",
      "400": "#2dd4bf",
      "500": "#0d9488",
      "600": "#0f766e",
      "700": "#115e59",
      "800": "#134e4a",
      "900": "#134e4a",
      "950": "#042f2e"
    },
    "accent": {
      "50": "#fef3c7",
      "100": "#fde68a",
      "200": "#fcd34d",
      "300": "#fbbf24",
      "400": "#f59e0b",
      "500": "#d97706",
      "600": "#b45309",
      "700": "#92400e",
      "800": "#78350f",
      "900": "#451a03",
      "950": "#1c0a00"
    }
  },
  "responsive": {
    "breakpoints": {
      "xs": 0,
      "sm": 640,
      "md": 768,
      "lg": 1024,
      "xl": 1280,
      "2xl": 1536
    },
    "grid_config": {
      "metric_grid": { "xs": 1, "sm": 2, "md": 2, "lg": 4, "xl": 4, "2xl": 4 },
      "workout_grid": { "xs": 1, "sm": 1, "md": 2, "lg": 2, "xl": 3, "2xl": 3 },
      "chart_layout": { "mobile": "stacked", "tablet": "split", "desktop": "grid" }
    }
  },
  "data_types": {
    "Patient": {
      "id": "string",
      "name": "string",
      "age": "number",
      "weight": "number",
      "height": "number",
      "goals": "FitnessGoal[]"
    },
    "Vitals": {
      "heartRate": "number",
      "bloodPressure": "{ systolic: number, diastolic: number }",
      "restingHeartRate": "number",
      "vo2Max": "number",
      "timestamp": "Date"
    },
    "HealthMetric": {
      "type": "'calories' | 'steps' | 'water' | 'sleep' | 'weight'",
      "value": "number",
      "date": "Date",
      "goal": "number"
    },
    "Workout": {
      "id": "string",
      "type": "'cardio' | 'strength' | 'flexibility' | 'sports'",
      "duration": "number",
      "caloriesBurned": "number",
      "intensity": "'low' | 'moderate' | 'high'",
      "completedAt": "Date"
    },
    "NutritionLog": {
      "id": "string",
      "mealType": "'breakfast' | 'lunch' | 'dinner' | 'snack'",
      "calories": "number",
      "protein": "number",
      "carbs": "number",
      "fats": "number",
      "timestamp": "Date"
    },
    "Achievement": {
      "id": "string",
      "title": "string",
      "description": "string",
      "icon": "string",
      "unlockedAt": "Date",
      "category": "'workout' | 'nutrition' | 'streak' | 'milestone'"
    }
  },
  "state_management": {
    "global_state": [
      "user profile and goals (zustand)",
      "daily metrics aggregation",
      "achievement progress",
      "workout history",
      "nutrition tracking"
    ],
    "server_state": [
      "health metrics sync (@tanstack/react-query)",
      "workout logging",
      "nutrition data",
      "wearable device integration",
      "progress analytics"
    ],
    "local_state": [
      "current workout timer",
      "form inputs (workout/meal entry)",
      "chart date range selection",
      "metric filters",
      "UI preferences"
    ],
    "form_state": [
      "workout entry form (react-hook-form + zod)",
      "nutrition logging",
      "goal setting forms",
      "profile updates"
    ]
  },
  "healthcare_features": [
    "real-time health metrics tracking",
    "workout logging with duration and intensity",
    "nutrition tracking with macronutrient breakdown",
    "sleep quality monitoring",
    "water intake tracking",
    "step counter integration",
    "calorie burn calculator",
    "heart rate zone analysis",
    "progress visualization with charts",
    "achievement and badge system",
    "daily/weekly/monthly goal setting",
    "workout history and trends",
    "nutrition analytics",
    "wearable device sync",
    "customizable health dashboards"
  ],
  "generation_hints": [
    "Use recharts to visualize workout trends, calorie intake, and weight progress over time",
    "Implement real-time metric updates with optimistic UI patterns",
    "Add workout timer with start/pause/stop functionality",
    "Use zod schemas to validate nutrition and workout entry forms",
    "Implement daily goal progress bars with animated transitions",
    "Add streak tracking for consecutive workout days",
    "Use framer-motion for achievement unlock animations",
    "Implement chart zoom and date range selection for historical data",
    "Add metric comparison between time periods (week over week)",
    "Use proper WCAG color contrast for health status indicators",
    "Implement keyboard shortcuts for quick workout logging",
    "Add voice input for hands-free workout logging",
    "Use loading skeletons during metric data fetching",
    "Implement offline-first architecture with local data caching",
    "Add export functionality for health reports (PDF/CSV)",
    "Use toast notifications for goal achievements",
    "Implement BMI and BMR calculators with visual feedback",
    "Add weekly summary reports with insights"
  ]
}