{
  "id": "enterprise-hr-dashboard",
  "title": "Enterprise HR Management Dashboard",
  "description": "Comprehensive HR analytics dashboard with workforce metrics, performance tracking, leave management, and talent visualization.",
  "category": "Human Resources",
  "color_palette": {
    "primary": "#2563eb",
    "secondary": "#059669",
    "accent": "#7c3aed",
    "background": "#f8fafc",
    "text": "#1e293b",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444"
  },
  "layout": {
    "type": "dashboard",
    "structure": [
      "header",
      "kpi-metrics",
      "department-chart",
      "leave-trends",
      "upcoming-events",
      "performance-ratings",
      "quick-actions",
      "employee-directory"
    ]
  },
  "components": {
    "shadcn": [
      "Button",
      "Card",
      "Input",
      "Select",
      "Tabs",
      "Badge",
      "Avatar",
      "Separator",
      "Progress",
      "Tooltip"
    ],
    "radix": [
      "Select",
      "Tabs",
      "Tooltip",
      "Separator"
    ],
    "semantic_roles": {
      "kpi-card": "kpi-metrics",
      "chart-container": ["department-chart", "leave-trends", "performance-ratings"],
      "data-grid": "employee-directory",
      "action-panel": "quick-actions",
      "calendar-widget": "upcoming-events"
    }
  },
  "libraries_to_be_imported": {
    "charts": ["recharts"],
    "animations": ["framer-motion"],
    "icons": ["lucide-react"],
    "date": ["date-fns"],
    "tables": ["@tanstack/react-table"],
    "utils": ["clsx", "tailwind-merge", "zod"]
  },
  "features": [
    "workforce-analytics",
    "performance-tracking",
    "leave-management",
    "talent-visualization",
    "employee-directory",
    "hr-reporting"
  ],
  "responsive": {
    "breakpoints": {
      "xs": 0,
      "sm": 640,
      "md": 768,
      "lg": 1024,
      "xl": 1280,
      "2xl": 1536
    },
    "grid_columns": {
      "xs": 1,
      "sm": 2,
      "md": 3,
      "lg": 4,
      "xl": 6,
      "2xl": 6
    }
  },
  "accessibility": {
    "wcag_level": "AA",
    "contrast_modes": ["light", "dark", "high-contrast"],
    "reduced_motion": true,
    "focus_variants": ["ring-2", "ring-offset-2"],
    "keyboard_support": ["tab-navigation", "arrow-keys", "enter-key"],
    "screen_reader": {
      "live_regions": ["polite", "assertive"],
      "announcements": ["kpi-changes", "data-updates"]
    }
  },
  "data_types": {
    "kpi": {
      "format": ["number", "percent", "currency", "duration", "score"],
      "change_type": ["positive", "negative", "neutral"]
    },
    "charts": {
      "types": ["pie", "bar", "line", "radar", "stacked-bar"],
      "data_keys": ["employees", "attrition", "leave_days", "performance_score"]
    },
    "employees": {
      "status": ["active", "on_leave", "terminated", "probation"],
      "department": ["engineering", "sales", "marketing", "hr", "finance", "operations"],
      "performance": ["excellent", "good", "average", "needs_improvement"]
    }
  },
  "state_management": {
    "required_state": ["employees", "selectedDepartment", "timeRange", "isLoading"],
    "optional_state": ["filters", "selectedEmployee", "comparisonMode"],
    "derived_state": ["totalHeadcount", "attritionRate", "averagePerformance", "leaveBalance"]
  },
  "hr_features": {
    "workforce_metrics": ["headcount", "attrition", "retention", "hiring_rate"],
    "performance_tracking": ["reviews", "goals", "feedback", "ratings"],
    "leave_management": ["pending_requests", "leave_balance", "attendance_rate"],
    "talent_analytics": ["skill_gaps", "succession_planning", "training_needs"]
  },
  "generation_hints": {
    "agent_instructions": "Use data-template-section for modular structure. HR dashboards require employee privacy considerations. Implement role-based access control. Department charts need dynamic filtering. Performance data requires proper anonymization.",
    "extension_points": ["payroll_integration", "recruitment_systems", "performance_management", "learning_platforms"],
    "validation_rules": {
      "employee_count": "Must be non-negative integer",
      "attrition_rate": "Must be 0-100 percent value",
      "performance_score": "Must be valid rating within defined scale"
    }
  }
}