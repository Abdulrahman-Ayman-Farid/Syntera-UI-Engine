{
  "id": "smart-manufacturing-control",
  "title": "Smart Manufacturing Control Panel",
  "description": "Industry 4.0 manufacturing dashboard with real-time equipment monitoring, production analytics, quality control, and automated alerts.",
  "category": "Manufacturing",
  "color_palette": {
    "primary": "#2563eb",
    "secondary": "#059669",
    "accent": "#f59e0b",
    "background": "#f8fafc",
    "text": "#1e293b",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444"
  },
  "layout": {
    "type": "industrial-dashboard",
    "structure": [
      "header",
      "production-metrics",
      "production-trends",
      "equipment-status",
      "control-panel",
      "live-alerts",
      "quality-metrics",
      "production-analytics"
    ]
  },
  "components": {
    "shadcn": [
      "Button",
      "Card",
      "Input",
      "Select",
      "Slider",
      "Switch",
      "Badge",
      "Progress",
      "Separator",
      "Tooltip"
    ],
    "radix": [
      "Select",
      "Slider",
      "Switch",
      "Tooltip",
      "Separator"
    ],
    "semantic_roles": {
      "kpi-card": "production-metrics",
      "line-chart": "production-trends",
      "equipment-card": "equipment-status",
      "control-group": "control-panel",
      "alert-item": "live-alerts",
      "radial-metric": "quality-metrics",
      "analytics-card": "production-analytics"
    }
  },
  "libraries_to_be_imported": {
    "charts": ["recharts"],
    "animations": ["framer-motion"],
    "icons": ["lucide-react"],
    "websockets": ["socket.io-client"],
    "state": ["@tanstack/react-query", "zustand"],
    "utils": ["clsx", "tailwind-merge", "date-fns"]
  },
  "features": [
    "real-time-monitoring",
    "equipment-tracking",
    "production-analytics",
    "quality-control",
    "predictive-maintenance",
    "energy-monitoring",
    "alert-management"
  ],
  "responsive": {
    "breakpoints": {
      "xs": 0,
      "sm": 640,
      "md": 768,
      "lg": 1024,
      "xl": 1280,
      "2xl": 1536
    },
    "grid_config": {
      "kpi_grid": { "xs": 1, "sm": 2, "md": 2, "lg": 4, "xl": 4, "2xl": 4 },
      "equipment_grid": { "xs": 1, "sm": 2, "md": 2, "lg": 2, "xl": 2, "2xl": 3 },
      "control_panel": { "xs": "stacked", "sm": "stacked", "md": "split", "lg": "sidebar", "xl": "sidebar" }
    }
  },
  "accessibility": {
    "wcag_level": "AA",
    "contrast_modes": ["light", "dark", "high-contrast"],
    "reduced_motion": true,
    "focus_variants": ["ring-2", "ring-blue-500", "ring-offset-2"],
    "keyboard_support": ["tab-navigation", "arrow-keys", "enter-key", "hotkeys"],
    "screen_reader": {
      "live_regions": ["polite", "assertive"],
      "announcements": ["equipment-status", "production-alerts", "quality-metrics"]
    }
  },
  "color_palette_extended": {
    "gradients": {
      "primary": "from-blue-600 to-blue-700",
      "secondary": "from-emerald-600 to-emerald-700",
      "accent": "from-amber-500 to-amber-600"
    },
    "equipment_status": {
      "running": "#10b981",
      "idle": "#3b82f6",
      "maintenance": "#f59e0b",
      "warning": "#fb923c",
      "critical": "#ef4444"
    },
    "production": {
      "on_target": "#10b981",
      "below_target": "#f59e0b",
      "stopped": "#ef4444",
      "quality_good": "#22c55e"
    }
  },
  "data_types": {
    "production": {
      "metrics": ["production_rate", "equipment_efficiency", "energy_consumption", "quality_rate"],
      "status": ["running", "maintenance", "idle", "warning", "critical"],
      "formats": ["number", "percent", "currency", "duration"]
    },
    "charts": {
      "types": ["line", "bar", "radial", "gauge"],
      "data_keys": ["output", "efficiency", "quality", "defect_rate", "rework_rate"]
    },
    "alerts": {
      "severity": ["critical", "warning", "info"],
      "categories": ["equipment", "quality", "safety", "production"]
    }
  },
  "iot_integration": {
    "protocols": ["mqtt", "opc-ua", "modbus"],
    "data_points": ["temperature", "pressure", "vibration", "power_consumption", "production_count"],
    "update_frequency": "realtime"
  },
  "state_management": {
    "stores": ["equipment", "production-metrics", "quality-data", "alerts", "energy-data", "user-preferences"],
    "persistence": ["local-storage", "indexed-db"],
    "sync": ["websocket", "mqtt", "opc-ua"],
    "real_time": true
  },
  "manufacturing_operations": {
    "production_features": [
      "real-time-production-tracking",
      "oee-monitoring",
      "cycle-time-analysis",
      "throughput-optimization",
      "downtime-tracking",
      "shift-reporting"
    ],
    "equipment_management": [
      "equipment-status-monitoring",
      "predictive-maintenance",
      "maintenance-scheduling",
      "asset-tracking",
      "spare-parts-management",
      "calibration-tracking"
    ],
    "quality_control": [
      "real-time-quality-metrics",
      "defect-tracking",
      "spc-monitoring",
      "inspection-management",
      "root-cause-analysis",
      "quality-alerts"
    ],
    "analytics": [
      "performance-analytics",
      "energy-monitoring",
      "cost-analysis",
      "efficiency-trends",
      "predictive-analytics",
      "kpi-dashboards"
    ],
    "control_systems": [
      "remote-equipment-control",
      "parameter-adjustment",
      "recipe-management",
      "batch-control",
      "automated-alerts"
    ]
  },
  "generation_hints": {
    "primary_focus": "Real-time manufacturing control with equipment monitoring and production analytics",
    "color_usage": "Use green for running equipment, yellow for maintenance, red for critical issues",
    "performance": "Optimize real-time IoT data updates, use efficient WebSocket/MQTT connections",
    "layout_priority": "Production KPIs and equipment status prominently displayed at top",
    "user_flow": "Quick production overview, equipment detail drill-down, quality monitoring, alert management",
    "real_time_data": "Implement efficient MQTT/OPC-UA integration for live equipment data",
    "alerting": "Provide immediate visual and audio alerts for equipment failures and quality issues",
    "dashboards": "Create Industry 4.0 compliant dashboards with OEE metrics and real-time charts"
  }
}